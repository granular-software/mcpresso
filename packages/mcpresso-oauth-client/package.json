{
  "name": "mcpresso-oauth-client",
  "version": "0.1.0",
  "description": "OAuth 2.1 PKCE client with Dynamic Client Registration for MCP servers - handles discovery, auto-registration, authorization, and token management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcpresso-auth-test": "dist/cli.js",
    "mcpresso-refresh-token": "dist/refresh-cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.2",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "oauth",
    "oauth2",
    "pkce",
    "mcp",
    "model-context-protocol",
    "authentication",
    "authorization",
    "client"
  ],
  "author": "Granular Software",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/granular-software/mcpresso-oauth-client"
  },
  "engines": {
    "node": ">=18"
  }
} 